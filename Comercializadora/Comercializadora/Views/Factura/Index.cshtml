@model List<Comercializadora.Models.Factura>

@{
    ViewData["Title"] = "Listado de Facturas";
}

<h2 class="mb-3">Gestión de Facturas</h2>

<a asp-action="Crear" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle"></i> Crear Nueva Factura
</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre Cliente</th>
            <th>Fecha</th>
            <th>Subtotal</th>
            <th>Impuesto</th>
            <th>Total</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.Id</td>
                <td>@factura.NombreCliente</td>
                <td>@factura.Fecha</td>
                <td>@factura.Subtotal</td>
                <td>@factura.Impuesto</td>
                <td class="fw-bold">@factura.Total</td>
                <td class="text-center">
                    <a asp-controller="DetalleFactura"
                       asp-action="Crear"
                       asp-route-id="@factura.Id"
                       class="btn btn-primary btn-sm">
                         Agregar Producto
                    </a>
                    <a asp-controller="Factura"
                       asp-action="Detalle"
                       asp-route-id="@factura.Id"
                       class="btn btn-info btn-sm">
                        Ver Detalle
                    </a>
                    <a asp-controller="Factura"
                       asp-action="DescargarTxt"
                       asp-route-id="@factura.Id"
                       class="btn btn-success btn-sm">
                        Descargar TXT
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>